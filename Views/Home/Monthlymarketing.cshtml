@{
    ViewData["Title"] = "Monthlymarketing";
}

<div class="mil-content">
    <div id="swupMain" class="mil-main-transition">

        <!-- banner -->
        <div class="mil-inner-banner">
            <div class="mil-animation-frame">
                <div class="mil-animation mil-position-4 mil-dark mil-scale" data-value-1="6" data-value-2="1.4"></div>
            </div>
            <div class="mil-banner-content mil-up">
                <div class="container">
                    <ul class="mil-breadcrumbs mil-mb-60">
                        <li><a asp-controller="Home" asp-action="Home">Homepage</a></li>
                        <li><a asp-controller="Home" asp-action="Monthly">Monthly Plans</a></li>
                        <li><a asp-controller="Home" asp-action="Monthlymarketing">Digital Marketing</a></li>
                    </ul>
                    <h1 class="mil-mb-60">Monthly <span class="mil-thin">Digital</span><br> Marketing <span class="mil-thin">Services</span></h1>
                    <a href="#service" class="mil-link mil-dark mil-arrow-place mil-down-arrow">
                        <span>Get Started</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- banner end -->
        <!-- service -->
        <section id="service">
            <div class="container mil-p-120-90">
                <div class="row justify-content-between">
                    <div class="col-lg-4 mil-relative mil-mb-90">

                        <h4 class="mil-up mil-mb-30">Our <span class="mil-thin">Monthly</span> <br>Digital Marketing <span class="mil-thin">Services</span></h4>
                        <p class="mil-up mil-mb-30">With our digital marketing subscription service, we help you grow your online presence through consistent marketing strategies. From social media management to SEO and paid ads, we work to achieve your business goals month after month.</p>
                        <div class="mil-up">
                            <a asp-controller="Home" asp-action="Started" class="mil-link mil-dark mil-arrow-place">
                                <span>Subscribe Now</span>
                            </a>
                        </div>

                    </div>
                    <div class="col-lg-6">

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Social Media Management</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">We manage your social media platforms, creating and scheduling content that engages your audience and builds brand awareness. Our team ensures your social media presence remains active and aligned with your marketing goals.</p>
                            </div>
                        </div>

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Search Engine Optimization (SEO)</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">Our SEO services focus on improving your website's ranking in search engines. We work on on-page and off-page SEO strategies to drive organic traffic to your website, ensuring long-term growth and visibility.</p>
                            </div>
                        </div>

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Pay-Per-Click Advertising (PPC)</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">We create and manage PPC campaigns on platforms like Google Ads and social media. Our team optimizes ad copy, targeting, and bidding strategies to maximize your return on investment and generate qualified leads.</p>
                            </div>
                        </div>

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Content Marketing</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">We produce valuable content that resonates with your audience, from blog posts and articles to infographics and videos. Our content marketing strategy focuses on building trust with your audience and driving engagement.</p>
                            </div>
                        </div>

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Email Marketing</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">Our email marketing service helps you maintain contact with your audience through well-crafted email campaigns. We design and execute strategies that drive conversions, increase customer retention, and build lasting relationships.</p>
                            </div>
                        </div>

                        <div class="mil-accordion-group mil-up">
                            <div class="mil-accordion-menu">
                                <p class="mil-accordion-head">Analytics & Reporting</p>

                                <div class="mil-symbol mil-h3">
                                    <div class="mil-plus">+</div>
                                    <div class="mil-minus">-</div>
                                </div>
                            </div>
                            <div class="mil-accordion-content">
                                <p class="mil-mb-30">We provide monthly reports with detailed insights into your marketing performance. From traffic sources to conversion rates, we analyze the data to continually refine and improve your digital marketing efforts.</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <!-- service end -->
    </div>
</div>
